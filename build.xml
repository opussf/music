<project name="master" default="package">

	<property name="lilypond" location="/Applications/LilyPond.app/Contents/Resources/bin/lilypond"/>

	<target name="clean" description="Cleans old builds">
		<delete dir="target" verbose="true"/>
	</target>

	<target name="package">
		<mkdir dir="target"/>
		<copy	todir="target" filtering="true" flatten="true">
			<fileset dir="src"/>
		</copy>
		<exec executable="${lilypond}" dir="target" outputproperty="lilypond.out" failifexecutionfails="false" errorproperty="lilypond.err">
			<arg line="--pdf file.ly"/>
		</exec>
		<echo>${lilypond.err}</echo>
	</target>

</project>